{
  "manifest_version": 2,

  "name": "CommaFeed",
  "icons": {
    "128": "icon128.png"
  },
  "description": "CommaFeed Firefox extension",
  "version": "1.5",
  "options_ui": {
	"page": "options.html",
	"browser_style": true
  },
  "applications": {
	"gecko": {
		"id": "firefox@commafeed.com"
	}
  },

  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
